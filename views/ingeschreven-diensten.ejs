<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ingeschreven Diensten - KKTOE</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        header {
            background-color: #ffffff;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 100%;
        }

        .header-content {
            display: flex;
            align-items: center;
        }

        .header-content h1 {
            margin-left: 20px;
            margin: 0;
            font-size: 24px;
            color: #333;
        }

        .rooster-container {
            padding: 20px;
            max-width: 800px;
            margin: 20px auto;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            background-color: #f9f9f9;
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            margin-top: 20px;
            border: 1px solid #ddd;
            border-radius: 12px;
            overflow: hidden;
        }

        th, td {
            border-bottom: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
        }

        tr:last-child td {
            border-bottom: none;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        td {
            background-color: white;
            font-size: 14px;
        }

        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #45a049;
        }

        .delete-button {
            background-color: #f44336;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 0;
            transition: background-color 0.3s ease;
        }

        .delete-button:hover {
            background-color: #d32f2f;
        }

        thead th:first-child {
            border-top-left-radius: 12px;
        }

        thead th:last-child {
            border-top-right-radius: 12px;
        }

        tbody tr:last-child td:first-child {
            border-bottom-left-radius: 12px;
        }

        tbody tr:last-child td:last-child {
            border-bottom-right-radius: 12px;
        }

        #success-message {
            display: none;
            color: green;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <header>
        <div class="header-content">
            <a href="/admin-dashboard" class="account-button">
                <img src="/images/back.png" alt="Terug" class="profile-pic"> 
                Terug naar Admin dashboard
            </a>
            <h1>Ingeschreven Diensten</h1>
        </div>
    </header>

    <div class="rooster-container">
        <table>
            <thead>
                <tr>
                    <th>Weekdag</th>
                    <th>Datum</th>
                    <th>Activiteit</th>
                    <th>Soort dienst</th>
                    <th>Aanvang</th>
                    <th>Einde</th>
                    <th>Op naam van</th> <!-- Aangepaste kolomtitel -->
                    <th>Acties</th> <!-- Kolom voor uitschrijven knop -->
                </tr>
            </thead>
            <tbody>
                <% function formatTime(timeString) { 
                    if (timeString) {
                        const timeParts = timeString.split(':');
                        const hours = timeParts[0].padStart(2, '0');
                        const minutes = timeParts[1].padStart(2, '0');
                        return `${hours}:${minutes}`;
                    } 
                    return '00:00';
                } %>
                <% if (diensten.length > 0) { %>
                    <% diensten.forEach(dienst => { %>
                        <tr>
                            <td><%= new Date(dienst.datum).toLocaleDateString('nl-NL', { weekday: 'long' }) %></td>
                            <td><%= new Date(dienst.datum).toLocaleDateString('nl-NL') %></td>
                            <td><%= dienst.activiteit %></td>
                            <td><%= dienst.soort_dienst %></td>
                            <td><%= formatTime(dienst.aanvang) %></td>
                            <td><%= formatTime(dienst.einde) %></td>
                            <td><%= dienst.naam %></td> <!-- Naam tonen -->
                            <td>
                                <!-- Uitschrijven knop -->
                                <button class="delete-button" onclick="removeDienst('<%= dienst.id %>')">Uitschrijven</button>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="8">Geen diensten gevonden.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <div id="success-message">Dienst is succesvol verwijderd!</div>

        <button type="button" onclick="printTable()">Lijst Afdrukken</button>

        <script>
            function printTable() {
                const originalContent = document.body.innerHTML;
                const printContent = document.querySelector('.rooster-container').innerHTML;
                document.body.innerHTML = printContent;
                window.print();
                document.body.innerHTML = originalContent;
            }

            // Functie om dienst te verwijderen
            function removeDienst(dienstId) {
                if (confirm("Weet je zeker dat je deze gebruiker wilt uitschrijven voor deze dienst?")) {
                    fetch(`/diensten/verwijderen/${dienstId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Er is iets misgegaan bij het uitschrijven.');
                        }
                        // Herlaad de pagina om de gewijzigde diensten te zien
                        location.reload(); 
                    })
                    .catch(error => {
                        alert(error.message);
                    });
                }
            }
        </script>
    </div>

    <footer>
        <p>Â© 2024 Mijn KKTOE. Alle rechten voorbehouden.</p>
    </footer>
</body>
</html>
