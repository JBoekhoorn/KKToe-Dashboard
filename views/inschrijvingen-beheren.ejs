<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inschrijvingen Beheren - KKTOE</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        header {
            background-color: #ffffff; /* Achtergrondkleur van de header */
            padding: 10px 20px; /* Padding voor de header */
            display: flex;
            align-items: center; /* Center de items verticaal */
            justify-content: flex-start; /* Items aan de linkerkant */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Schaduw voor diepte */
            width: 100%; /* Zorg ervoor dat de header de volledige breedte heeft */
        }

        .header-content {
            display: flex;
            align-items: center; /* Center de items verticaal */
        }

        .header-content h1 {
            margin-left: 20px; /* Ruimte tussen de terugknop en de titel */
            margin: 0; /* Verwijder standaard marges */
            font-size: 24px; /* Grotere titel */
            color: #333; /* Donkerdere kleur voor de titel */
        }

        .inschrijvingen-container {
            padding: 20px;
            max-width: 1200px; /* Maximale breedte van de container */
            margin: 20px auto; /* Centreren van de container */
            border-radius: 12px; /* Ronde hoeken voor de container */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Schaduw voor diepte */
            background-color: #f9f9f9; /* Achtergrondkleur van de container */
        }

        form {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #555;
        }

        input[type="text"],
        input[type="date"],
        input[type="time"],
        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            box-sizing: border-box;
        }

        button {
            background-color: #4CAF50; /* Groene achtergrondkleur */
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px; /* Ronde hoeken */
            cursor: pointer; /* Pointer cursor */
            font-size: 16px; /* Grotere tekst */
            margin-right: 10px; /* Ruimte tussen de knoppen */
        }

        button:hover {
            background-color: #45a049; /* Donkerder groen bij hover */
        }

        /* Specifieke stijlen voor actieknoppen */
        .btn-verwijder {
            background-color: #e74c3c; /* Rood voor verwijderen */
            color: white;
            padding: 10px 20px; /* Zelfde padding als de bewerken knop */
            border-radius: 8px; /* Ronde hoeken */
            border: none; /* Geen rand */
            cursor: pointer; /* Pointer cursor */
        }

        .btn-verwijder:hover {
            background-color: #c0392b; /* Donkerder rood bij hover */
        }

        .btn-bewerken {
            background-color: #3498db; /* Blauw voor bewerken */
            color: white;
            padding: 10px 20px; /* Zelfde padding als de verwijderen knop */
            border-radius: 8px; /* Ronde hoeken */
            border: none; /* Geen rand */
            cursor: pointer; /* Pointer cursor */
            text-decoration: none; /* Verwijder onderstreping */
        }

        .btn-bewerken:hover {
            background-color: #2980b9; /* Donkerder blauw bij hover */
        }

        table {
            width: 100%;
            border-collapse: separate; /* Scheiding tussen de cellen */
            border-spacing: 0; /* Geen extra ruimte tussen cellen */
            margin-top: 20px;
            border: 1px solid #ddd; /* Rand om de tabel */
            border-radius: 12px; /* Ronde hoeken voor de tabel */
            overflow: hidden; /* Zorg ervoor dat de hoeken goed afgerond blijven */
        }

        th, td {
            border-bottom: 1px solid #ddd; /* Rand onder de cellen */
            padding: 12px; /* Padding binnen de cellen */
            text-align: center; /* Centreer de tekst */
        }

        th {
            background-color: #4CAF50; /* Achtergrondkleur van de header */
            color: white; /* Kleur van de tekst in de header */
            font-size: 16px; /* Grotere tekst voor de header */
        }

        tr:last-child td {
            border-bottom: none; /* Geen onderrand voor de laatste rij */
        }

        tr:nth-child(even) {
            background-color: #f2f2f2; /* Achtergrondkleur voor even rijen */
        }

        td {
            background-color: white; /* Achtergrondkleur voor de cellen */
            font-size: 14px; /* Tekstgrootte voor de cellen */
        }

        footer {
            text-align: center; /* Center de tekst in de footer */
            margin-top: 20px; /* Ruimte boven de footer */
            color: #000000; /* Kleur van de tekst in de footer */
        }
    </style>
</head>
<body>
    <header>
        <div class="header-content">
            <a href="/admin-dashboard" class="account-button">
                <img src="/images/back.png" alt="Terug" class="profile-pic">
                Terug naar Admin dashboard
            </a>
            <h1>Nieuwe inschrijving aanmaken</h1>
        </div>
    </header>

    <div class="inschrijvingen-container">
        <!-- Formulier voor het aanmaken van een nieuwe inschrijving -->
        <form id="inschrijvingForm" action="/inschrijving-toevoegen" method="POST">
            <label for="activiteit">Activiteit:</label>
            <input type="text" id="activiteit" name="activiteit" required>
            
            <label for="datum">Datum:</label>
            <input type="date" id="datum" name="datum" required>
        
            <label for="soort_dienst">Soort Dienst:</label>
            <select id="soort_dienst" name="soort_dienst" required>
                <option value="">Selecteer een soort dienst</option>
                <option value="Techniek - FOH Geluid">Techniek - FOH Geluid</option>
                <option value="Techniek - FOH Licht">Techniek - FOH Licht</option>
                <option value="Techniek - Stagehand">Techniek - Stagehand</option>
                <option value="KKToe - Algemeen">KKToe - Algemeen</option>
                <option value="KKToe - Horeca">KKToe - Horeca</option>
            </select>
        
            <label for="aanvang">Aanvang:</label>
            <input type="time" id="aanvang" name="aanvang" required>
        
            <label for="einde">Einde:</label>
            <input type="time" id="einde" name="einde" required>
        
            <button type="submit">Inschrijving Toevoegen</button>
        </form>

        <!-- Tabel met inschrijvingen -->
        <h2>Bestaande Inschrijvingen</h2>
        <table>
            <thead>
                <tr>
                    <th>Datum</th>
                    <th>Activiteit</th>
                    <th>Soort Dienst</th>
                    <th>Aanvang</th>
                    <th>Einde</th>
                    <th>Acties</th> <!-- Kolom voor de actieknoppen -->
                </tr>
            </thead>
            <tbody id="inschrijvingen-tabel">
                <% if (inschrijvingen.length > 0) { %>
                    <% 
                        // Sorteer de inschrijvingen op datum (van vroeg naar laat)
                        inschrijvingen.sort((a, b) => new Date(a.datum) - new Date(b.datum)); 
                    %>
                    <% inschrijvingen.forEach(function(inschrijving) { %>
                        <tr id="inschrijving-<%= inschrijving.id %>">
                            <td>
                                <% 
                                    const date = new Date(inschrijving.datum);
                                    const day = String(date.getDate()).padStart(2, '0');
                                    const month = String(date.getMonth() + 1).padStart(2, '0');
                                    const year = date.getFullYear();
                                    const formattedDate = `${day}/${month}/${year}`;
                                %>
                                <%= formattedDate %>
                            </td>
                            <td><%= inschrijving.activiteit %></td>
                            <td><%= inschrijving.soort_dienst %></td>
                            <td>
                                <%
                                    const timeStart = new Date(`1970-01-01T${inschrijving.aanvang}`);
                                    const formattedTimeStart = timeStart.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
                                %>
                                <%= formattedTimeStart %>
                            </td>
                            <td>
                                <%
                                    const timeEnd = new Date(`1970-01-01T${inschrijving.einde}`);
                                    const formattedTimeEnd = timeEnd.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
                                %>
                                <%= formattedTimeEnd %>
                            </td>
                            <td>
                                <button class="btn-verwijder" onclick="verwijderInschrijving('<%= inschrijving.id %>')">Verwijderen</button>
                                <button class="btn-bewerken" onclick="bewerkenInschrijving('<%= inschrijving.id %>')">Bewerken</button>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6">Geen inschrijvingen gevonden.</td>
                    </tr>
                <% } %>
            </tbody>            
        </table>
    </div>

    <footer>
        <p>Â© 2024 Mijn KKTOE. Alle rechten voorbehouden.</p>
    </footer>

    <script>
        // Functie om de inschrijving te verwijderen
        function verwijderInschrijving(inschrijvingId) {
            // Bevestiging vragen aan de gebruiker
            if (confirm('Weet je zeker dat je deze inschrijving wilt verwijderen?')) {
                // Stuur een POST-verzoek naar de server om de inschrijving te verwijderen
                fetch('/inschrijvingen-verwijderen', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ inschrijving_id: inschrijvingId }) // Stuur het inschrijving ID als JSON
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Als succesvol, verwijder de rij uit de tabel
                        const row = document.getElementById(`inschrijving-${inschrijvingId}`);
                        if (row) {
                            row.remove(); // Verwijder de rij uit de DOM
                        }
                    } else {
                        alert('Er is een fout opgetreden bij het verwijderen van de inschrijving: ' + data.error);
                    }
                })
                .catch(error => {
                    console.error('Fout:', error);
                    alert('Er is een fout opgetreden bij het verzenden van het verwijderverzoek.');
                });
            }
        }

        // Functie om de inschrijving te bewerken
        function bewerkenInschrijving(inschrijvingId) {
            // Hier kun je de logica voor het bewerken van de inschrijving implementeren.
            alert(`Bewerken van inschrijving ID: ${inschrijvingId}`);
        }
    </script>
</body>
</html>
